# Database
DATABASE_URL="postgresql://postgres:YOUR_STRONG_PASSWORD_HERE@localhost:5432/dialog_ehr?schema=public"

# PostgreSQL Configuration (for docker-compose)
POSTGRES_USER=postgres
# IMPORTANT: Use a strong password in production. Generate one with: openssl rand -base64 32
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD_HERE
POSTGRES_DB=dialog_ehr
POSTGRES_PORT=5432

# Authentication
# セッションシークレット (32文字以上のランダム文字列)
# 生成コマンド: openssl rand -base64 32
SESSION_SECRET="REPLACE_WITH_RANDOM_32_CHAR_SECRET"

# アカウントロック設定
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION_MINUTES=30

# パスワードリセット有効期限
PASSWORD_RESET_TOKEN_EXPIRY_HOURS=1

# Default Admin Account (created during initial setup)
# Username: admin
# Password: Admin123!
# IMPORTANT: Change the password after first login!
